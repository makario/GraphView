<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GraphView">
        <attr name="title" format="string|reference" />
        <attr name="graphStyle">
            <enum name="line" value="0" />
            <enum name="bar" value="1" />
        </attr>
        <attr name="drawGrid" format="boolean" />
        <attr name="gridColor" format="color|reference" />
        <attr name="graphColor" format="color|reference" />
        <attr name="labelColor" format="color|reference" />
        
        <attr name="labelPadding" format="dimension|reference" />
        <attr name="labelTextSize" format="dimension|reference" />
        <attr name="showVerticalLabels" format="boolean" />
        <attr name="showHorizontalLabels" format="boolean" />
        
        <attr name="numVerticalLabels" format="integer" />
        <attr name="numHorizontalLabels" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="LineGraphView">
        <attr name="drawSeriesPoints" format="boolean" />
        <attr name="seriesPointStyle">
            <enum name="circle" value="0" />
            <enum name="square" value="1" />
            <enum name="triangle" value="2" />
        </attr>
        <attr name="drawSmoothLine" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="BarGraphView">
        <attr name="barWidth" format="dimension|reference" />
        <attr name="maxBarWidth" format="dimension|reference" />
    </declare-styleable>

</resources>